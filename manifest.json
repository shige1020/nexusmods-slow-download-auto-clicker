{
  "manifest_version": 3,
  "name": "NexusMods Slow Download Auto Clicker",
  "version": "1.0.0",
  "description": "Automatically triggers the Slow download action on NexusMods mod file pages.",
  "content_scripts": [
    {
      "matches": [
        "*://www.nexusmods.com/*/mods/*?tab=files*",
        "*://next.nexusmods.com/*/mods/*?tab=files*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
