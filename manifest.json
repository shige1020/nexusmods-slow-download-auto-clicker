{
  "manifest_version": 3,
  "name": "NexusMods Slow Download Auto Clicker",
  "version": "1.1.0",
  "description": "Automatically triggers the Slow download actio...ds mod file pages and optionally auto-closes the download tab.",

  "permissions": [
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://www.nexusmods.com/*/mods/*?tab=files*",
        "*://next.nexusmods.com/*/mods/*?tab=files*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
